@model NZWalks.UI.Models.DTO.AddRegionViewModel
@{
}
<h1 class="mt-3">Add Region</h1>

<form method="post" class="mt-3">
	<div class="mt-3">
		<label class="form-lable">Code: </label>
		<input type="text" name="code" class="form-control" asp-for="Code"/>
		<label class="form-lable">Name: </label>
		<input type="text" name="name" class="form-control" asp-for="Name"/>
		<label class="form-lable">Image URL: </label>
		<input type="text" name="RegionImageURL" class="form-control" asp-for="RegionImageURL" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>