@model NZWalks.UI.Models.DTO.RegionDto
@{
}

<h1 class="mt-3">Update Region</h1>

<form method="post" class="mt-3">
	<div class="mt-3">
		<label class="form-lable">Id: </label>
		<input readonly type="text" name="id" class="form-control" asp-route="@Model.Id" value="@Model.Id" />
		<label class="form-lable">Code: </label>
		<input type="text" name="code" class="form-control" asp-for="Code" value="@Model.Code"/>
		<label class="form-lable">Name: </label>
		<input type="text" name="name" class="form-control" asp-for="Name" value="@Model.Name"/>
		<label class="form-lable">Image URL: </label>
		<input type="text" name="RegionImageURL" class="form-control" asp-for="RegionImageUrl"  value="@Model.RegionImageUrl"/>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>
